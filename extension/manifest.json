{
  "manifest_version": 3,
  "name": "Allegro Analyzer",
  "version": "1.1.0",
  "version_name": "1.1.0 DEV",
  "description": "NarzÄ™dzie do analizy i optymalizacji aukcji Allegro z wykorzystaniem AI",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://allegro.pl/oferta/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://allegro.pl/oferta/*"],
      "js": ["content/content-script.js"],
      "css": ["content/content-styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
